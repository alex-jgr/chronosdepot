<script type="text/mustache-template" id="assigned-teams-template">
    {{#teams}}
            <input type="hidden" name="teams[]" value="{{id}}" />
    {{/teams}}
</script>
<script type="text/mustache-template" id="project-invite-template">
    {{#invites}}
        <div class="row" id="invite-{{contact_id}}">
            <div class="col-xs-12">
                <div class="input-group btn-group">
                    <a href="/user/profile/{{user_id}}" class="form-control">
                        {{#user_email}}{{user_email}}{{/user_email}}
                        {{^user_email}}{{contact_email}}{{/user_email}}
                    </a>
                    <button class="btn btn-danger cancel" data-id="{{contact_id}}" data-user="{{#user_email}}{{user_email}}{{/user_email}}{{^user_email}}{{contact_email}}{{/user_email}}" type="button"><i class="glyphicon glyphicon-remove"></i></button>
                </div>
            </div>
            <div class="clearfix"></div>
            <br />
        </div>
    {{/invites}}
</script>