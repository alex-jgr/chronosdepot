{{#tasks}}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 {{status}} task-element" id="task-box-{{id}}" data-goal="{{goal}}">
        <div class="panel panel-info {{status}}" id="task-heading-{{id}}">
            <div class="panel-heading expand" data-toggle="collapse" data-target="#task-info-{{id}}">
                <div class="row">
                    <div class="col-xs-10">
                        <i class="glyphicon glyphicon-ok-sign"></i>
                        {{#has_active_tasks}}
                            <a href="/project/work/{{project_id}}{{#parent_id}}/{{parent_id}}{{/parent_id}}">{{project_name}}:</a> <br />
                        {{/has_active_tasks}}
                        {{goal}}
                    </div>
                    <div class="col-xs-1">
                        <i class="glyphicon glyphicon-menu-down"></i>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body collapse" id="task-info-{{id}}">
                {{{description}}}
                <br /><br />
                <label class="label label-info col-xs-12">Estimated hours: {{estimate}}</label>
                <label class="label label-default col-xs-12">Registered time spent: <span id="readable-task-duration-{{id}}">{{duration}}</span></label>
            </div>
            
            <div class="panel-footer" id="task-footer-{{id}}">
                {{#action_button}}
                    {{^has_children}}
                        <div class="task-timer" id="task-timer-{{id}}" data-limit="{{estimate_seconds}}" data-elapsed="{{work_seconds}}" data-active="{{worklog_id}}" data-countdown="true" data-id="{{id}}"></div>
                    {{/has_children}}
                    {{#has_children}}
                        <a class="btn btn-default col-xs-12" href="/project/work/{{project_id}}/{{id}}">Go to sub tasks</a>
                    {{/has_children}}
                {{/action_button}}
                {{^action_button}}
                    <button class="btn btn-default col-xs-12 reenable-task" data-id="{{id}}" data-limit="{{estimate_seconds}}" data-elapsed="{{work_seconds}}" data-countdown="true" data-has_children="{{has_children}}" type="button">
                        Re enable task
                    </button>
                {{/action_button}}
                <div class="clearfix"></div>
            </div>
            <div class="progress task">
                <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100" style="width: {{progress}}%" >
                    {{progress}}%
                </div>
            </div>
        </div>            
    </div>
{{/tasks}}