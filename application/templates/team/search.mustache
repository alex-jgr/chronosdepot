<div class="panel panel-info team-results">
    <div class="panel-heading">
        <label class="pull-left pull-left col-xs-6 col-md-6">Team results...</label>
        <form class="input-group pull-right col-xs-6 col-md-6" action="/team/search" method="post">
            <label class="input-group-addon"><i class="glyphicon glyphicon-search"></i></label>
            <input class="form-control" type="text" name="team_name" placeholder="Team name..."/>
        </form>
        <span class="clearfix"></span>
    </div>
    <div class="panel-body row table-panel-container">
         <table class="table table-striped table-hover">
            <tbody>
                {{#teams}}
                    <tr>
                        <td>
                            <a href="/team/profile/{{id}}">{{#image}}<img class="thumbnail" src="{{image}}" alt />{{/image}}</a>
                        </td>
                        <td>
                            <a href="/team/profile/{{id}}">{{name}}</a>
                        </td>
                    </tr>
                {{/teams}}
            </tbody>
        </table>
        {{^teams}}
            <div class="col-xs-12">
                <br />
                <center><p>No teams matched your search.</p></center>
                <br />
            </div>
        {{/teams}}
    </div>
</div>